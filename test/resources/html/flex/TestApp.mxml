<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
                applicationComplete="init();">
<mx:Script>
<![CDATA[
import org.flex_pilot.FPBootstrap;

private function init():void {
    FPBootstrap.flex_pilotLibPath = 'FlexPilot.swf';
    FPBootstrap.init(stage);
}
]]>
</mx:Script>
<mx:Script>
<![CDATA[
import mx.controls.Alert;

protected function upperCase(event:MouseEvent):void {
    inputField.text = inputField.text.toUpperCase();
    Alert.show("Upper cased");
}
]]>
</mx:Script>
<mx:Label id="helloLabel" text="Hello Flex!"/>
<mx:TextInput id="inputField" text="testing"/>
<mx:Button id="upperButton" label="Upper" click="upperCase(event)"/>
</mx:Application>
